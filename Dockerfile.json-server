FROM node:alpine

WORKDIR /app

# Install json-server globally
RUN npm install -g json-server

# Create db directory and copy the database file
RUN mkdir -p /app/db
COPY db/db.json /app/db/db.json

# Expose port 3000
EXPOSE 3000

# Start json-server
CMD ["json-server", "--watch", "/app/db/db.json", "--host", "0.0.0.0", "--port", "3000"]